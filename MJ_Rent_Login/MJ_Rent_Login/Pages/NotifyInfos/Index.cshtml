@page
@model MJ_Rent_Login.Pages.NotifyInfos.IndexModel

@{
    ViewData["Title"] = "通知列表";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h3>通知列表</h3>
<p></p>

<!--
<p>
    <a asp-page="Create">Create New</a>
</p>
-->
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NotifyInfo[0].UserId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NotifyInfo[0].InfoContext)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NotifyInfo[0].HaveNotify)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.NotifyInfo) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InfoContext)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HaveNotify)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
