@page
@model MJ_Rent_Login.Pages.MeetRooms.IndexModel

@{
    ViewData["Title"] = "會議室列表";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h3>會議室列表</h3>

<p>
    <a asp-page="Create">新增會議室</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MeetRoom[0].Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MeetRoom[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MeetRoom[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MeetRoom[0].Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MeetRoom[0].Capacity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MeetRoom[0].HaveProjector)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MeetRoom[0].HaveWhiteboard)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MeetRoom[0].IsActive)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.MeetRoom) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Capacity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HaveProjector)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HaveWhiteboard)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">編輯</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">詳細資料</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">刪除</a>
            </td>
        </tr>
}
    </tbody>
</table>
