@page
@model MJ_Rent_Login.Pages.MeetRooms.EditModel

@{
    ViewData["Title"] = "編輯會議室";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h3>編輯會議室</h3>
<hr />

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger">
            </div>

            <div class="form-group">
                <label asp-for="MeetRoom.Id" class="control-label"></label><br />
                <input asp-for="MeetRoom.Id" readonly />
            </div>
            <div class="form-group">
                <label asp-for="MeetRoom.Name" class="control-label"></label>
                <input asp-for="MeetRoom.Name" class="form-control" />
                <span asp-validation-for="MeetRoom.Name" class="text-danger"></span>    
                <!--25行為檢查項目，若有不符合規則的內容出現，則會跳該行(提示通知之類的，紅字等等)-->
            </div>
            <div class="form-group">
                <label asp-for="MeetRoom.Description" class="control-label"></label>
                <input asp-for="MeetRoom.Description" class="form-control" />
                <span asp-validation-for="MeetRoom.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MeetRoom.Type" class="control-label"></label>
                <input asp-for="MeetRoom.Type" class="form-control" />
                <span asp-validation-for="MeetRoom.Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MeetRoom.Capacity" class="control-label"></label>
                <input asp-for="MeetRoom.Capacity" class="form-control" />
                <span asp-validation-for="MeetRoom.Capacity" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="MeetRoom.HaveProjector" /> @Html.DisplayNameFor(model => model.MeetRoom.HaveProjector)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="MeetRoom.HaveWhiteboard" /> @Html.DisplayNameFor(model => model.MeetRoom.HaveWhiteboard)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="MeetRoom.IsActive" /> @Html.DisplayNameFor(model => model.MeetRoom.IsActive)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="存檔" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">返回列表</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
